function chdir () {
  \cd "${*:-$HOME}" && \
  ls && \
  echo "$(whoami)@$(hostname):$(pwd)/"
}
function lsg() {
    ls -a | grep -i $(echo "$@" | sed s/\ /.*/)
}
function mkcd () {
        mkdir -p "$*" && cd "$*"
}

export PATH="$HOME/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export EDITOR=vim
export VISUAL=vim
export PAGER=less
