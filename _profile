alias cd="chdir"
alias giA="git add ."
alias gia="git add"
alias gic="git commit"
alias gil="git log --name-only --oneline"
alias gim="git commit -m"
alias giP="git push origin master"
alias gip="git pull"
alias gis="git status"
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias ll="ls -lAF"
alias lsl="ls | less"
alias mv="mv -i"
alias open="xdg-open"
